package easy1;

public class Reverse_a_number {

	public static void main(String[] args) {
	  
		System.out.println(reverse(-40056));
		
	}	
		
	public static int reverse(int x){
		
     
        int rev = 0;
        if (x> Integer.MAX_VALUE || x < Integer.MIN_VALUE) {
			return 0;
	   int n = Math.abs(x);

		}
        
        while(n!= 0){
            if (n > 0 && n %10 == 0){
                
            	rev = rev*10+ 0;
                
            }
            
            
            else { rev = rev*10 + n%10; }
            
            n=n/10;
        }
        if(x<0){
        	rev = rev*-1;
        	
        }
       
        
        
        
        return  rev;
        
     
        

	}

}

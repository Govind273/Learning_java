package easy1;

public class Reverse_a_number {

	public static void main(String[] args) {
	  
		System.out.println(reverse(4056));
		
	}	
		
	public static int reverse(int x){
		int sign = 0 ;
        
		
		if(x >=0 ){
           sign = +1; 
        }
        else{
            sign = -1;
        }

        int rev = 0;
        while(x!= 0){
            if (x > 0 && x%10 == 0){
               
            	rev = rev*10+ 0;
                
            }
            
            
            else  rev = rev*10 + x%10;
            
            x=x/10;
        }
        return  sign * rev;
        
     
        

	}

}

package easy1;

public class Reverse_a_number {

	public static void main(String[] args) {
	  
		System.out.println(reverse(+456));
		
	}	
		
	public static int reverse(int x){
		int sign = 0 ;
        
		
		if(x >=0 ){
           sign = +1; 
        }
        else{
            sign = -1;
        }

        int rev = 0;
        while(x!= 0){
            if (x%10 == 0){
               
            	rev = rev+ 0;
                break;
            }
            
            if (rev< 10){
            rev = x%10;
            }
            else  rev = rev*10 + x%10;
            
            x=x/10;
        }
        return  sign * rev;
        
     
        

	}

}

package easy1;

public class Reverse_a_number {

	public static void main(String[] args) {
	  
		System.out.println(reverse(456));
		
	}	
		
	public static int reverse(int x){
		
     
        int rev = 0;
        int n = Math.abs(x);
        while(n!= 0){
            if (n > 0 && n %10 == 0){
                
            	rev = rev*10+ 0;
                
            }
            
            
            else { rev = rev*10 + n%10; }
            
            n=n/10;
        }
        return  rev;
        
     
        

	}

}
